{
    "name": "cloudforest/api-client-php",
    "description": "PHP client for the CloudForest Marketplace API",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "CloudForest\\": "src/"
        }
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs src",
        "phpcbf": "./vendor/bin/phpcbf src"
    }
}