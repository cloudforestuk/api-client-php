{
    "name": "cloudforest/api-client-php",
    "description": "PHP client for the CloudForest Marketplace API",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.59",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "CloudForest\\": "src/"
        }
    },
    "scripts": {
        "phpcs:check": "./vendor/bin/php-cs-fixer check ./src",
        "phpcs:fix": "./vendor/bin/php-cs-fixer fix src",
        "phpstan": "./vendor/bin/phpstan analyse -l 9 src"
    }
}
